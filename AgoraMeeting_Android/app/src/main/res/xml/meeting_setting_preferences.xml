<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>
        <Preference
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:key="@string/key_room_name"
            app:title="@string/room_name" />

        <Preference
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:key="@string/key_room_pwd"
            app:title="@string/room_pwd" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            android:layout="@layout/layout_preference_image"
            app:icon="@drawable/ic_logo_little"
            app:iconSpaceReserved="false"
            app:key="@string/key_avatar"
            app:title="@string/avatar" />

        <Preference
            android:layout="@layout/layout_preference_edittext"
            app:iconSpaceReserved="false"
            app:key="@string/key_name"
            app:title="@string/name" />
    </PreferenceCategory>

    <PreferenceCategory>
        <SwitchPreferenceCompat
            android:layout="@layout/layout_preference_switch"
            app:iconSpaceReserved="false"
            app:key="@string/key_camera"
            app:title="@string/camera" />

        <SwitchPreferenceCompat
            android:layout="@layout/layout_preference_switch"
            app:iconSpaceReserved="false"
            app:key="@string/key_mic"
            app:title="@string/mic" />

        <SwitchPreferenceCompat
            android:layout="@layout/layout_preference_switch"
            app:enabled="false"
            app:iconSpaceReserved="false"
            app:key="@string/key_beauty"
            app:title="@string/beauty" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            android:key="@string/key_about"
            android:layout="@layout/layout_preference_image"
            app:icon="@drawable/ic_arrow_right"
            app:iconSpaceReserved="false"
            app:title="@string/about" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            android:key="@string/key_invite"
            android:layout="@layout/layout_preference_button"
            app:iconSpaceReserved="false"
            app:title="@string/invite" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            android:key="@string/key_upload"
            android:layout="@layout/layout_preference_button"
            app:iconSpaceReserved="false"
            app:title="@string/upload_log" />
    </PreferenceCategory>

</PreferenceScreen>
