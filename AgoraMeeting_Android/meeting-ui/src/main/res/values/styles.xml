<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MeetingAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/global_accent</item>
        <item name="colorPrimary">@color/global_primary</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.IOS</item>
        <item name="alertDialogStyle">@style/AlertDialog.IOS</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:ratingBarStyle">@style/CuteRatingBar</item>

        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#000000</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyTheme.Caption</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyTheme.Button</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preference</item>
    </style>

    <style name="AlertDialog.IOS" parent="AlertDialog.AppCompat">
        <item name="android:layout">@layout/layout_alert_ios</item>
    </style>

    <style name="AlertDialog.Theme.IOS" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_ios_alert</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.DropDownUp</item>
    </style>

    <style name="CuteRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_indicator</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_indicator</item>
    </style>

    <style name="CustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="TextAppearance.MyTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.MyTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.MyTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.MyTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

</resources>